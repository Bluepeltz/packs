{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "prefer-ascii",
        "camelcase",
        "eqeqeq",
        "no-const-assign",
        "no-eval",
        "no-non-null-assertion",
        "no-throw-literal",
        "no-sparse-arrays",
        "no-external-import"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "singleQuote": true,
    "indentWidth": 2
  },
  "lock": false,
  "importMap": "./import_map.json",
  "tasks": {
    "start": "deno run -A --watch=static/,src/,i18n/ main.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
